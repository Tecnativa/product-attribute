<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
    <record id="ir_cron_product_sales_metrics" model="ir.cron">
        <field name="name">Product: analyze sales metrics over products</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field
            name="nextcall"
            eval="(DateTime.now().replace(hour=0, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"
        />
        <field name="doall" eval="False" />
        <field name="model_id" ref="product.model_product_product" />
        <field name="code">model._cron_product_sales_365()</field>
        <field name="state">code</field>
    </record>
</odoo>
